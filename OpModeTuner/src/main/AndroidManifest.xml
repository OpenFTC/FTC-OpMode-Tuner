<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.frogbots.ftcopmodetuner">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".network.NetworkedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FtcOpModeTunerTheme">
        <activity
            android:name=".ui.activity.OpModeTunerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name=".ui.activity.settings.OpModeTunerSettingsActivity"/>
        <activity android:name=".ui.activity.settings.AdvancedNetworkSettingsActivity"/>
        <activity android:name=".ui.activity.settings.AdvancedUiSettingsActivity"/>
        <activity android:name=".ui.activity.settings.CommonSettingsActivity"/>
        <activity android:name=".ui.activity.AboutActivity"/>
        <activity android:name=".ui.activity.AppIntroActivity"/>
        <activity android:name=".ui.activity.OpenSourceLicensesActivity"/>
        <activity
            android:name=".ui.activity.ConfigSelectionActivty"
            android:theme="@style/ConfigSelectionStyle"/>
        <activity android:name=".ui.activity.hubtoolkit.HubSelectionActivity">
        </activity>
        <activity
            android:name=".ui.activity.FunctionChooserActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.hubtoolkit.LynxModuleControlActivity"
            android:label="@string/title_activity_lynx_module_control"
            android:theme="@style/FtcOpModeTunerTheme.NoActionBar">
        </activity>
    </application>

</manifest>