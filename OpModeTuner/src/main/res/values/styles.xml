<resources>

    <!-- Base application theme. -->
    <style name="FtcOpModeTunerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ConfigSelectionStyle" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:buttonStyle">@style/FtcButtonStyle</item>
    </style>

    <style name="FtcButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FtcOpModeTunerTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FtcOpModeTunerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="FtcOpModeTunerTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
